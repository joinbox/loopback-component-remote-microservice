{
    "name": "RemoteModel",
    "base": "Model",
    "http": {
        "path": "/a-remote-model"
    },
    "methods": {
        "sayHi": {
            "accepts": [
                {
                    "arg": "name",
                    "type": "string",
                    "required": true,
                    "http": {
                        "source": "path"
                    }
                },
                {
                    "arg": "options",
                    "type": "object",
                    "http": {
                        "source": "context"
                    }
                }
            ],
            "returns": {
                "arg": "greeting",
                "type": "string",
                "isRoot": true
            },
            "http": {
                "path": "/say-hello/:name",
                "verb": "get"
            }
        }
    }
}